{
    "name": "build-tools",
    "type": "module",
    "private": true,
    "license": "Apache-2.0",
    "scripts": {
        "clean": "pnpm recursive --no-sort run clean",
        "build": "pnpm recursive --sort run build",
        "test": "pnpm recursive --sort run test",
        "check-types": "tsc --noEmit",
        "watch-types": "pnpm check-types -w",
        "lint": "eslint ./packages --cache",
        "prettier-check": "pnpm prettier:common -c",
        "prettier": "pnpm prettier:common -w",
        "prettier:common": "prettier ./packages --ignore-path .eslintignore --cache",
        "prepare": "husky install",
        "ci:test": "pnpm run clean && pnpm run check-types && pnpm run lint && pnpm run test",
        "ci:version": "pnpm changeset version && pnpm install",
        "ci:publish": "pnpm run clean && pnpm run build && pnpm publish -r --access public"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.1",
        "@types/chai": "^4.3.5",
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.18.30",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "chai": "^4.3.7",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^8.0.3",
        "mocha": "^10.2.0",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.0",
        "typescript": "^5.0.4"
    },
    "engines": {
        "node": ">= 16",
        "pnpm": "^7 || ^8"
    }
}
